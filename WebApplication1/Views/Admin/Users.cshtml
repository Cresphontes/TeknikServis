@model List<Web.Models.IdentityEntities.User>
@{
	ViewBag.Title = "Users";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";


	var roles = ViewBag.Roles as List<Web.Models.IdentityEntities.Role>;
}


@section css{
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
	<style>
		a.btn:hover {
			-webkit-transform: scale(1.1);
			-moz-transform: scale(1.1);
			-o-transform: scale(1.1);
		}

		a.btn {
			-webkit-transform: scale(0.8);
			-moz-transform: scale(0.8);
			-o-transform: scale(0.8);
			-webkit-transition-duration: 0.5s;
			-moz-transition-duration: 0.5s;
			-o-transition-duration: 0.5s;
		}
	</style>
}

<table id="example" class="table table-striped table-bordered" style="width:100%">
	<thead>

		<tr>
			<th>#</th>
			<th>Id</th>
			<th>İsim</th>
			<th>Soyisim</th>
			<th>Pozisyon</th>
			<th>Email</th>
			<th>Telefon</th>
			<th>Cinsiyet</th>
			<th>Doğum Tarihi</th>
			<th>Ülke</th>
			<th>Şehir</th>
			<th>Adres</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>

		@for (int i = 0; i < Model.Count; i++)
		{
			foreach (var role in Model[i].Roles.ToList())
			{
				foreach (var role1 in roles)
				{
					if (Model[i].Id == role.UserId)
					{
						if (role1.Id == role.RoleId)
						{
							<tr>
								<td>@(i + 1)</td>
								<td>@Model[i].Id</td>
								<td>@Model[i].Name</td>
								<td>@Model[i].Surname</td>
								<td>@role1.Name</td>
								<td>@Model[i].Email</td>
								<td>@Model[i].PhoneNumber</td>
								<td>@Model[i].Gender</td>
								<td>@Model[i].BirthDate</td>
								<td>@Model[i].Country</td>
								<td>@Model[i].City</td>
								<td>@Model[i].Adress</td>
								<td>


									<a href="@Url.Action("EditModal","Admin",new {id=Model[i].Id})" class="btn btn-warning a-btn-slide-text">
										<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
										<span><strong>Edit</strong></span>
									</a>
								</td>
								<td>
									<a href="#" class="btn btn-danger a-btn-slide-text">
										<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
										<span><strong>Delete</strong></span>
									</a>
								</td>



							</tr>
						}
					}

				}

			}

		}

	</tbody>

</table>

				@{Html.RenderAction("EditModal", "Admin");}

