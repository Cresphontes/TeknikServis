@model Web.Models.ViewModels.TroubleRecordViewModel
@{
	ViewBag.Title = "TroubleRecord";
	Layout = "~/Views/Shared/_UserLayout.cshtml";

	List<Web.Models.ViewModels.TroubleRecordViewModel> list = ViewBag.List;

}
<div style="padding-bottom:10px;height:550px;" padding-top:10px">
	@using (Html.BeginForm("TroubleRecord", "Home", FormMethod.Post, new { @class = "form-horizontal", @style = "margin-top:150px", enctype = "multipart/form-data" }))
	{

		<div class="row">
			<div class="offset-3 col-md-6">
				<div style="margin-right:75px" class="card-body">
					<div class="form-group row">
						@Html.LabelFor(x => x.Types, new { @style = "margin-top:5px", @class = "col-md-3 m-t-15 text-right control-label col-form-label" })
						<div class="col-md-9">
							@Html.EnumDropDownListFor(x => x.Types, "Seçiniz", new { @class = "select2 form-control custom-select", @style = "width: 100%; height:10px;", size = "1" })
						</div>
					</div>
					<div class="form-group row">
						@Html.LabelFor(x => x.BrandTypes, new { @style = "margin-top:5px", @class = "col-md-3 m-t-15 text-right control-label col-form-label" })
						<div class="col-md-9">
							@Html.EnumDropDownListFor(x => x.BrandTypes, "Seçiniz", new { @class = "select2 form-control custom-select", @style = "width: 100%; height:10px;", size = "1" })
						</div>
					</div>
					<div class="form-group row">
						@Html.LabelFor(x => x.PostedFile, new { @style = "margin-top:5px", @class = "col-md-3 m-t-15 text-right control-label col-form-label" })
						<div class="col-md-9">
							@Html.TextBoxFor(x => x.PostedFile, new { @class = "select2 form-control custom-select", @style = "width: 100%; height:10px;", @type = "file", @multiple = "false" })
						</div>
					</div>
					<div class="form-group row">
						@Html.LabelFor(x => x.Message, new { @style = "margin-top:5px", @class = "col-md-3 m-t-15 text-right control-label col-form-label" })
						<div class="col-md-9">
							@Html.TextAreaFor(x => x.Message, new { @class = "select2 form-control custom-select", @style = "width: 100%; height:10px;", @rows = "5" })
						</div>
					</div>


				</div>
			</div>
		</div>
		<div class="row">
			<div style="margin:auto;margin-top:20px">
				<button type="submit" class="btn btn-lg btn-primary">Submit</button>
			</div>
		</div>
	}

</div>




